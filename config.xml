
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.novubal.buduaar"
        versionCode="16" 
        version   = "1.0.6">

    <!-- versionCode is optional and Android only -->

    <name>Buduaar</name>

    <description>
       Buduaari rakendus
    </description>

    <author href="https://www.efley.ee" email="kristo@efley.ee">
        Efley
    </author>
    
    <access origin="*" />
    
    <preference name="phonegap-version" value="3.1.0" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce" 	value="false" />
    
    <preference name="load-url-timeout" value="120000" />
    
    <feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
    
    <plugin name="Notification" value="CDVNotification" />
    
    <icon src="assets/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="assets/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="assets/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    
    <icon src="assets/icon_android.png" gap:platform="android" gap:density="ldpi" />
	<icon src="assets/icon_android.png" gap:platform="android" gap:density="mdpi" />
	<icon src="assets/icon_android.png" gap:platform="android" gap:density="hdpi" />
	<icon src="assets/icon_android.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="assets/splash/android/screen-ldpi-portrait.jpg"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="assets/splash/android/screen-mdpi-portrait.jpg"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="assets/splash/android/screen-hdpi-portrait.jpg"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="assets/splash/android/screen-xhdpi-portrait.jpg" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="assets/splash/ios/screen-iphone-portrait.png"    	gap:platform="ios"	width="320" height="480" />
    <gap:splash src="assets/splash/ios/screen-iphone-portrait-2x.png" 	gap:platform="ios"	width="640" height="960" />
    <gap:splash src="assets/splash/ios/Default-568h@2x.png" 			gap:platform="ios"	width="640" height="1136" />
    
    <gap:splash src="assets/splash/ios/screen-ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="assets/splash/ios/screen-ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />
    
	<gap:plugin name="org.apache.cordova.core.file" />
    <gap:plugin name="org.apache.cordova.core.file-transfer" />
    <gap:plugin name="org.apache.cordova.core.network-information" />
    <gap:plugin name="org.apache.cordova.camera" version="0.2.4" />
    <gap:plugin name="org.apache.cordova.media-capture" version="0.2.8" />

</widget>