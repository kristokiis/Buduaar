
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "ee.efley.buduaar"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Buduaar</name>

    <description>
       Buduaari rakendus
    </description>

    <author href="https://www.efley.ee" email="kristo@efley.ee">
        Efley
    </author>
    
    <access origin="*" />
    
    <preference name="phonegap-version" value="2.3.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce" 	value="false" />
    
    <gap:plugin name="ChildBrowser" />
	<gap:plugin name="Analytics" /> <!-- latest release -->
    
    <feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
    
    <icon src="assets/icon.png" />

    <gap:splash src="assets/splash/android/screen-ldpi-portrait.jpg"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="assets/splash/android/screen-mdpi-portrait.jpg"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="assets/splash/android/screen-hdpi-portrait.jpg"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="assets/splash/android/screen-xhdpi-portrait.jpg" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="assets/splash/ios/screen-iphone-portrait.jpg"    	gap:platform="ios"	width="320" height="480" />
    <gap:splash src="assets/splash/ios/screen-iphone-portrait-2x.jpg" 	gap:platform="ios"	width="640" height="960" />
    <gap:splash src="assets/splash/ios/Default-568h@2x.jpg" 			gap:platform="ios"	width="640" height="1136" />
    
    <gap:splash src="assets/splash/ios/screen-ipad-portrait.jpg"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="assets/splash/ios/screen-ipad-landscape.jpg"     gap:platform="ios"     width="1024" height="768" />
    
	

</widget>